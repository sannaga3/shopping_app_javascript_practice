<h1>Money History</h1>

<table>
  <thead>
    <tr>
      <th>所持金履歴</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @money_history.each do |money| %>
      <tr>
        <td><%= "#{money.yen} 円" %></td>
        <td><%= money.remarks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
