<h1>Money History</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>所持金履歴</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @money_histries.each do |money| %>
      <tr>
        <td style="width: 200px;"><%= l(money.created_at, format: :long2) %></td>
        <td style="width: 120px;"><%= "#{money.yen} 円" %></td>
        <td><%= money.remarks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
