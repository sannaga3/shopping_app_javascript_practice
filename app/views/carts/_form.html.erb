<%= form_with(model: cart, local: true) do |form| %>
  <% if cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
        <% cart.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :shop_id %>
    <%= f.select :shop_id, @shops.all.map {|shop| ["#{shop.name}", shop.id]}, { prompt: '選択してください', "data-value" => "" }, id: "item_shop_form"%>
  </div>

  <%= form.hidden_field :user_id, value:current_user.id %>

  <%= f.fields_for :cart_items do |image| %>
    <%= render partial: 'items/index', item: @items %>
    <%= image.hidden_field :id, value: image.object.id %> #編集時にはidが必要らしい
  <%= f.submit %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
